{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018", "es2019"],
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__"]
}
